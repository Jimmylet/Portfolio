.screen-reader-response
  display: none;

.form br
  display: none

.wpcf7-not-valid-tip
  color #EF4836
  display block
  margin-top 0.3em
  font-size 1.6em

.wpcf7-validation-errors
  color #EF4836
  font-size 1.6em
  text-align center
  padding: .1em
  line-height 1.4
