
.whati
  background-image url("../img/svg/pattern_rect_2.svg")
  background-repeat repeat-x
  background-position center top
  background-color color-portolio-blue

/************************************\
  CARDS TOP
\************************************/

.whati
  &__card
    position: relative
    background-color #FFF
    max-width 330px
    padding 3em
    text-align center
    &__icon
      margin-bottom 2em
    &__title
      margin-bottom 0.573em
      color color-title-cards-top
      font-size: 2.62em
      text-transform uppercase
      font-weight: bold
    &__text
      margin-bottom 1.456em
      font-size: 2.06em
      color color-text-cards-top
      line-height .95em
    &__button
      font-size 1.6em
      color white
      background-color color-portolio-blue
      padding 0.438em 2.375em 0.598em
      border-radius 10em
      display inline-block
      &:focus
      &:hover
        transition trans
        background-color color-portolio-blue - 10%

.whati__blog
  border-right 1px solid #B2B2B2
.whati__contact
  border-right 1px solid #B2B2B2

.whati
  &__social
    &__button
      padding 0
      height 33px
      width 184px
      &__icon
        &:before
          display inline-block
          color inherit
          font-family: icon_font
          font-size: 1.5em
          position relative
          top 4px
        &:hover:before
        &:focus:before
          color #FFF - 8%
        &-minfb:before
          content "\e909"
        &-mintw:before
          content "\e908"
        &-mingit:before
          content "\e907"
        &-minlink:before
          content "\e906"
        &-minbe:before
          content "\e905"





/************************************\
  TITLE
\************************************/

.whati__title
  font-size: 5rem
  color #FFF
  position: relative
  top 6em
  text-transform uppercase
  &:after
    content ""
    display block
    margin 10px auto 0
    height 14px
    width 0px
    background url("../img/svg/line_cequejefais.svg") no-repeat center

/************************************\
  ANIM LINE TITLE
\************************************/

.anim-line
  .whati__title:after
    width 441px
    transition .5s


@media screen and (max-width: 817px)
  .whati__cards-container
    display flex
    flex-direction column
  .whati__card
    border none
  .whati
    height 150em
  .whati__title
    top 17em


/************************************\
 iDo
\************************************/

.ido
  &__card
    background-color #FFF
    padding 8.5em 2.5em 3.5em
    margin-right 2em
    &:last-child
      margin-right 0
    &__title
      font-size: 3.33em
      color #1D1D1D
      text-transform uppercase
    &__text
      font-size: 2.06em
      color #464646
      margin-top: 0.971em
      text-align left

/************************************\
  ANIM
\************************************/

// CIRCLE LINE
.ido-stroke
  stroke-dasharray: 0
  stroke-dashoffset: 0
  visibility hidden
.ido-anim
  .ido-stroke
    stroke-dasharray: 1000
    stroke-dashoffset: 1000
    visibility visible
  .ido-stroke1
    animation: dash 3s linear forwards
  .ido-stroke2
    animation: dash 3s linear .4s forwards
  .ido-stroke3
    animation: dash 3s linear .8s forwards

@keyframes dash
  to {
    stroke-dashoffset: 0
}

