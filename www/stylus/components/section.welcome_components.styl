.welcome
  background-color color-welcome-bckg
  color color-text-white
  text-align center
  padding 0 rem(15px)
  background-image url(../img/portrait_vector_home.svg)
  background-repeat no-repeat
  background-position bottom center
  background-size 95%
  &__hello
    font-weight bold
    letter-spacing rem(1px)
    font-size rem(20px)
  &__description
    font-size: rem(18px)
    line-height 1.2
    font-weight normal

@media screen and (min-width: 491px)
  .welcome
    background-size 100%
    background-position center bottom -1px

@media only screen and (min-width: 508px)
  .welcome
   background-size rem(490px) rem(437px)