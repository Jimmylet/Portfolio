@import "kouto-swiss"

.apps
  position: relative
  background #F8F8F8
  padding 5rem 3rem
  &:before
    content ""
    display inline-block
    width 55px
    height 55px
    border-radius 50%
    background-color #ECF0F1
    position: absolute
    top -35px
    margin-left: auto
    margin-right: auto
    left: 0
    right: 0
  &__title-section
    position: absolute
    top 9999px
    left -9999px
  &__wrap
    max-width 65.7rem
    margin: 0 auto
    text-align center
    display flex
    flex-direction row
    justify-content space-between
  &__app
    &__img
      display block
      margin 0 auto 1.6rem auto
    &__img--png
      height 80px
      width 80px
    &__img--sketch
      retina-image("../img/svg/sketch_logo.png", 80px 80px, "@2x")
    &__img--phpstorm
      retina-image("../img/svg/phpstorm_logo.png", 80px 80px, "@2x")
    &__title
      display block
      font-size 2.058em
      color #525252
      letter-spacing 0.58px
      margin-bottom: 1rem
    &__cote
      margin 0 auto
      display block