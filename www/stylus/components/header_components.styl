.header
  background-color color-header-bluedark
  border-bottom 2px solid color-header-bluedark - 40%
  &__logo
    color color-header-white
    font-size 2rem


.menu
  &__item
    color color-header-white
    font-size: 2rem
    font-weight: bold
    line-height 5.1rem
    &:hover
      background-color color-header-bluefocus
      transition trans



@media screen and (max-width: 750px)
  .site-pusher
    transition trans
    transform translateX(0px)

  .menu
    background-color color-header-bluedark - 5%
    width: menu-res-width
    transform translateX(25rem)
    &__item
      border-bottom 2px solid color-header-bluedark - 30%

  .with--sidebar
    .site-pusher
      transform translateX(-250px)
    .site-cache
      background-color rgba(0,0,0,.6)