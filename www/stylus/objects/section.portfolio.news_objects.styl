.portfolio-news
  position relative
  &__button
    margin-top 5rem

.news-container
  padding 0 3rem
  &__browser
    height 32rem
    max-width 32rem
    position relative
    margin 5rem auto 0 auto
  &__topbar
    position: relative
  &__img
    max-width 100%
    height auto
  &__link
    font-size: 0
    display block


@media screen and (min-width: 1080px)
  .news-container
    display flex
    margin 0 auto
    width 1080px
    padding 0 1.5rem
    &__browser
      width 32rem
