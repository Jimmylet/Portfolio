.header
  position: relative
  left 0
  right 0
  box-sizing content-box
  height size-nav-height
  &__title
    display none
  &__logo
    display inline-block
    position: absolute
    bottom: -3px
    left 3em
    height 5em
    & svg
      position: relative
      bottom 2.6em
      right 1.5em
      opacity 0
      transition trans
    &:hover svg
      opacity 1
      transition trans
  &__icon
    display none
    &__label
      display none

.menu
  display inline-flex
  flex-wrap nowrap
  height 100%
  float: right
  &__title
    display: none
  &__item
    padding 0 rem(25px)

.container
  overflow hidden
  *zoom: 1;

/************************************\
    RESPONSIVE MENU START
\************************************/
@media screen and (max-width: 740px)

  .site-pusher
    height: 100%

  .site-container
    overflow: hidden
    height: 100%

  .site-content
    height: 100%
    overflow-scrolling touch


  .header
    position: static
    &__icon
      position: relative
      display block
      font-size: 0
      float right
      &:after
        content ""
        width rem(60px)
        height: rem(51px)
        background-image url(../img/svg/menu-icon.svg)
        background-repeat no-repeat
        background-position center
        display inline-block



  .header__icon
    display none
    &__label
      cursor pointer
      font-size: 0
      float: right
      display inline-block
      position: relative
      top 10px
      right 10px
      transition filter .3s ease
      &:hover
        transition filter .3s ease
        filter contrast(60%);
    &__label:after
      content ""
      width rem(60px)
      height: rem(51px)
      background-image url(../img/svg/menu-icon.svg)
      background-repeat no-repeat
      background-position center
      display inline-block



  .menu
    position: absolute
    right: 0
    top: 0
    bottom: 0
    overflow-y: scroll
    flex-direction column
    &__item
      padding-left rem(40px)


  .with--sidebar
    overflow hidden
    height 100%
    .site-cache
      position: absolute
      left: 0
      right: 0
      top: 0
      bottom: 0

  .header__icon:checked
    transform: translateX(-250px);
    transition: trans

  .header__icon:checked ~ .menu
    transform: translateX(0px);
    z-index: 10;
    overflow-y: visible;


  .header__icon:checked ~ .header__icon__label
    transform: translateX(-250px)


  .header__logo
    top 7px
