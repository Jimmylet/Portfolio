.header
  background-color color-header-bluedark
  border-bottom 2px solid color-header-bluedark - 40%


.menu
  &__item
    color color-header-white
    font-size: 2rem
    font-weight: bold
    line-height 5.1rem
    border-right 1px solid color-header-bluedark - 40%
    &:hover
    &:focus
      background-color color-header-bluefocus
      transition trans
    &:nth-child(6)
      border-right none

.active
  background-color color-header-bluefocus

@media screen and (max-width: 740px)
  .site-pusher
    transition trans
    transform translateX(0px)

  .menu
    background-color color-header-bluedark - 5%
    width: menu-res-width
    transform translateX(menu-res-width)
    &__item
      border-bottom 2px solid color-header-bluedark - 40%

  .with--sidebar
    .site-pusher
      transform translateX(-250px)
    .site-cache
      transition .3s linear
      background-color rgba(0,0,0,.6)


.menu__item-mail
  overflow: hidden;
  position relative
.menu__item
  &__logo
    display: inline-block;
    position absolute
    left 70px
    top 5px
    transform: translateX(-100px);
    opacity: 0
    transition: transform .3s cubic-bezier(.87,.13,.37,.94)
  &__txt
    display: inline-block;
    transition: transform .2s cubic-bezier(.87,.13,.37,.94)
.menu__item-mail:hover .menu__item__logo
  transform: translateX(0px);
  opacity: 1
  transition: .3s cubic-bezier(.87,.13,.37,.94)
.menu__item-mail:hover .menu__item__txt
  transform: translateX(100px);
  opacity: 0
  transition: .3s cubic-bezier(.87,.13,.37,.94)
