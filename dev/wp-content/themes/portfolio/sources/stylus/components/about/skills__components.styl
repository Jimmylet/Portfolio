@import "kouto-swiss"

.skills__section-title
  position: absolute
  top -9999px
  left -9999px

.skills
  background #ECF0F1
  padding 15rem 3rem
  &__article
    max-width 97.5em
    background #FFFFFF
    box-shadow 0px 1px 1px 0px rgba(121,121,121,0.50)
    margin-bottom 15rem
    &__header
      padding: 2rem
      background: #EAEAEA;
      box-shadow: 0px 1px 0px 0px rgba(121,121,121,0.50);
      font-family: ralewayfont;
      font-size: 3.33rem
      color: #393939;
      letter-spacing: 0.91px;
      text-align center
    &__paragraph
      padding 5rem 2rem 3rem 2rem
      max-width: 70%
      margin 0 auto
      text-align center
      font-family: ralewayfont
      font-size 2.06rem
      line-height: 1.4em
      color: #3E3E3E;
    &__affinity
      display block
      margin 0 auto
      padding-bottom 5rem







/*******/
/* CMS */
/*******/

.cms
  display flex
  flex-direction row
  max-width 45.3em
  justify-content space-between
  text-align center
  margin: 0 auto
  &__title
    font-size 2.058em
    color: #525252
    letter-spacing: 0.55px
    text-transform: uppercase
    display: block
    margin-bottom 1.5rem
  &__img
  &__cote
    margin: 0 auto
    display: block
  &__img
    margin-bottom: 2rem
  &__cote
    margin-bottom: 1rem


@media screen and (max-width: 498px)
  .cms
    flex-direction: column;
    &__cote
      margin-bottom 5rem
